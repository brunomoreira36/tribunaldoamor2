  <script>
    function analisarMotivos() {
      const motivoBruno = document.getElementById('motivo-bruno').value.trim();
      const motivoMarcella = document.getElementById('motivo-marcella').value.trim();
      const resultadoSection = document.getElementById('resultado-section');
      const resultado = document.getElementById('resultado');
      const emojiResultado = document.getElementById('emoji-resultado');
      const historico = document.getElementById('historico');
      
      if (!motivoBruno || !motivoMarcella) {
        resultadoSection.classList.remove('hidden');
        resultado.innerText = 'Por favor, preencham os dois lados da hist√≥ria ‚ù§Ô∏è';
        emojiResultado.innerText = 'üòä';
        return;
      }
      
      // Simula√ß√£o de julgamento por IA (l√≥gica fict√≠cia melhorada)
      const razaoParaBruno = motivoBruno.length > motivoMarcella.length;
      const dataAtual = new Date().toLocaleString();
      
      if (razaoParaBruno) {
        resultado.innerHTML = 'üîé <span class="text-blue-600">Veredito:</span> Hoje a raz√£o √© do <span class="font-bold text-blue-600">Bruno</span><br><span class="text-sm font-normal">(mas o amor √© dos dois ‚ù§Ô∏è)</span>';
        emojiResultado.innerText = 'üòé';
        
        // Adiciona ao hist√≥rico
        historico.innerHTML += `
          <div class="p-3 bg-blue-50 rounded-lg border border-blue-100">
            <div class="flex justify-between items-start">
              <span class="font-medium text-blue-700">Raz√£o do Bruno</span>
              <span class="text-xs text-gray-500">${dataAtual}</span>
            </div>
            <p class="text-sm mt-1 text-gray-600">${motivoBruno.substring(0, 60)}...</p>
          </div>
        `;
      } else {
        resultado.innerHTML = 'üîé <span class="text-pink-600">Veredito:</span> Hoje a raz√£o √© da <span class="font-bold text-pink-600">Marcella</span><br><span class="text-sm font-normal">(mas o amor √© dos dois ‚ù§Ô∏è)</span>';
        emojiResultado.innerText = 'üíÅ‚Äç‚ôÄÔ∏è';
        
        // Adiciona ao hist√≥rico
        historico.innerHTML += `
          <div class="p-3 bg-pink-50 rounded-lg border border-pink-100">
            <div class="flex justify-between items-start">
              <span class="font-medium text-pink-700">Raz√£o da Marcella</span>
              <span class="text-xs text-gray-500">${dataAtual}</span>
            </div>
            <p class="text-sm mt-1 text-gray-600">${motivoMarcella.substring(0, 60)}...</p>
          </div>
        `;
      }
      
      resultadoSection.classList.remove('hidden');
      
      // Rolagem suave para o resultado
      resultadoSection.scrollIntoView({ behavior: 'smooth' });
    }
    
    function resetarTribunal() {
      document.getElementById('motivo-bruno').value = '';
      document.getElementById('motivo-marcella').value = '';
      document.getElementById('resultado-section').classList.add('hidden');
      document.getElementById('motivo-bruno').focus();
    }
